@model IEnumerable<DiarioDeSintomas.Models.DiarioSintoma>

@{
    ViewData["Title"] = "Registro de Sintomas";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Novo Registro</a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Data/Hora</th>
                    <th>Sintoma</th>
                    <th>Pressão Arterial</th>
                    <th>Medicamentos</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DataHora.ToString("dd/MM/yyyy")</td>
                        <td>@Html.DisplayFor(modelItem => item.Sintoma)</td>
                        <td>@Html.DisplayFor(modelItem => item.PressaoArterial)</td>
                        <td>@Html.DisplayFor(modelItem => item.Medicamentos)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>