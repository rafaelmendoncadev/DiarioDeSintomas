@model DiarioDeSintomas.Models.DiarioSintoma

@{
    ViewData["Title"] = "Editar Registro";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />
                <div class="mb-3">
                    <label asp-for="DataHora" class="form-label"></label>
                    <input asp-for="DataHora" class="form-control" />
                    <span asp-validation-for="DataHora" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Atividade" class="form-label"></label>
                    <input asp-for="Atividade" class="form-control" />
                    <span asp-validation-for="Atividade" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Sintoma" class="form-label"></label>
                    <input asp-for="Sintoma" class="form-control" />
                    <span asp-validation-for="Sintoma" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Duracao" class="form-label"></label>
                    <input asp-for="Duracao" class="form-control" />
                    <span asp-validation-for="Duracao" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="PressaoArterial" class="form-label"></label>
                    <input asp-for="PressaoArterial" class="form-control" />
                    <span asp-validation-for="PressaoArterial" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="OutrosSintomas" class="form-label"></label>
                    <input asp-for="OutrosSintomas" class="form-control" />
                    <span asp-validation-for="OutrosSintomas" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Medicamentos" class="form-label"></label>
                    <input asp-for="Medicamentos" class="form-control" />
                    <span asp-validation-for="Medicamentos" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="AlimentacaoHidratacao" class="form-label"></label>
                    <input asp-for="AlimentacaoHidratacao" class="form-control" />
                    <span asp-validation-for="AlimentacaoHidratacao" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Observacoes" class="form-label"></label>
                    <input asp-for="Observacoes" class="form-control" />
                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary ms-2">Voltar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}