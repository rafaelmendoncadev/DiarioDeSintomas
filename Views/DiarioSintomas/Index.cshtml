
@model IEnumerable<DiarioDeSintomas.Models.DiarioSintoma>

@{
    ViewData["Title"] = "Diário de Sintomas";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Novo Registro</a>
    </p>
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.DataHora)</th>
                    <th>@Html.DisplayNameFor(model => model.Atividade)</th>
                    <th>@Html.DisplayNameFor(model => model.Sintoma)</th>
                    <th>@Html.DisplayNameFor(model => model.Duracao)</th>
                    <th>@Html.DisplayNameFor(model => model.PressaoArterial)</th>
                    <th>@Html.DisplayNameFor(model => model.OutrosSintomas)</th>
                    <th>@Html.DisplayNameFor(model => model.Medicamentos)</th>
                    <th>@Html.DisplayNameFor(model => model.AlimentacaoHidratacao)</th>
                    <th>@Html.DisplayNameFor(model => model.Observacoes)</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DataHora)</td>
                        <td>@Html.DisplayFor(modelItem => item.Atividade)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sintoma)</td>
                        <td>@Html.DisplayFor(modelItem => item.Duracao)</td>
                        <td>@Html.DisplayFor(modelItem => item.PressaoArterial)</td>
                        <td>@Html.DisplayFor(modelItem => item.OutrosSintomas)</td>
                        <td>@Html.DisplayFor(modelItem => item.Medicamentos)</td>
                        <td>@Html.DisplayFor(modelItem => item.AlimentacaoHidratacao)</td>
                        <td>@Html.DisplayFor(modelItem => item.Observacoes)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Excluir</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>